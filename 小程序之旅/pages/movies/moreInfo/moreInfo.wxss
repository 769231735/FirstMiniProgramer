/* pages/movies/moreInfo/moreInfo.wxss */
@import "../movies-star-template/movies-star-template.wxss";
.container{
    position: relative;
}
.pageTop{
   
    
}
.bg{
     border: 1px solid transparent;
    width: 750rpx;
     /* overflow: hidden;  */
    /* height: 320rpx; */
}
.bg image{
    width: 750rpx;
    height: 1120rpx;
    filter: blur(10rpx);
    position: absolute;
    top: -800rpx;
}
.countries{
    position: absolute;
    font-size: 30rpx;
    color: white;
    top: 182rpx;
    left: 45rpx;   
}
.title{
    position: absolute;
    font-size: 40rpx;
    color: white;
    top: 60rpx;
    left: 40rpx;
    font-weight: bold;
}
.wish_comment{
    position: absolute;
    font-size: 25rpx;
    color: #615a5c;
    top: 250rpx;
    left: 45rpx;
}
.wish{
    color: #db1745;
    margin-right: 25rpx;
}
.comment{
    color: #db1745;
    margin-right: 25rpx;
}
.wish_comment text:nth-of-type(2){
    margin-right: 25rpx;
}
/*详情页的小图*/
.images image{
    width: 170rpx;
    height: 240rpx;
}
.images{
    position: absolute;
    right: 30rpx;
    top:140rpx;
}
.marginTop{
    margin-top: 320rpx;
}
/*original_title这一块 */
.pageMiddle{
    width: 670rpx;
    height: auto;
    /* border:1px solid red; */
    padding: 40rpx;
    border-bottom:2rpx solid #d9d9d9;
}
.original_title{
    margin-top: 20rpx;
   font-size: 25rpx;
   margin-bottom: 50rpx;
   color: #666666;
}
.mList{
    font-size: 22rpx;
    color: #bfbfbf;
     margin-right: 50rpx;
}
.mContent{
    
    font-size: 25rpx;
    color:#7d7d7d;
}
.dRating{
    display: flex;
}
/*summary  */
.summary{
    height: 50rpx;
}
.summary{
    font-size: 25rpx;
    color: #bfbfbf;
}
.sContent{
    font-size: 25rpx;
    color:#7d7d7d;
    margin-top: 15rpx;
    line-height: 55rpx;
    letter-spacing: 4rpx;
}
/*最后的scroll-x  */
.scroll-x{
    width: 100%;
    height: 320rpx;
}
.wrap_list{
    height: 300rpx;
    width: 180rpx;
     background: #f2f2f2; 
     margin-left: 30rpx; 
    float: left;
}
.wrap_list view{
    text-align: center;
}
/*尽可能的长，以便更多的左右滑动的小块  */
.wrap{
    /* width: 3000rpx; */
    width:3000rpx;
}
.castsImg{
    width: 180rpx;
    height: 240rpx;
}
.castsName{
    width: 180rpx;
    font-size: 25rpx;
    line-height: 60rpx;
    color:#7d7d7d;
    
}


