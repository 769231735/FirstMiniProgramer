/* pages/movies/movies.wxss */
@import './movies-list-template/movies-list-template.wxss';
page{
    background: #f2f2f2;
}
input{
    background: #f2f2f2;
    height: 80rpx;
    width: 600rpx;
    /* padding: 20rpx; */
    position: absolute;
    margin-bottom: 50rpx;
    padding-left: 80rpx;
    font-size: 35rpx;
    color: #0f0f0f;
}
.search{
    position: relative;
    border: 1px solid transparent;
}
.searchImg{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 20rpx;
    top: 25rpx;
}
.xxImg{
    width:30rpx;
    height: 30rpx;
    position: absolute;
    z-index: 500;
    right: 20rpx;
    top: 25rpx;
}
/*解决定位的问题  */
.marginTop{
    margin-top: 80rpx;
    
}
/*搜索页的样式  */
.searchList{
    display: flex;
    flex-wrap: wrap;
}