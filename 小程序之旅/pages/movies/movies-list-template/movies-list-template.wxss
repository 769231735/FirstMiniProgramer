    height: 480rpx;
    width: 750rpx;
    background: #ffffff;
    border: 1px solid transparent;
    margin-bottom: 30rpx;
    

}
.hot{
    
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}
.hot text:nth-of-type(1){
