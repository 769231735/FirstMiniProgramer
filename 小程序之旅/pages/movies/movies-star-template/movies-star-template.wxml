<template name = "movies-star-template">     
        <view class='star'>
                
                 <image src='{{stars>=10?"/images/icon/star.png":"/images/icon/none-star.png"}}'></image> 
                 <image src='{{stars>20?"/images/icon/star.png":"/images/icon/none-star.png"}}'></image> 
                 <image src='{{stars>30?"/images/icon/star.png":"/images/icon/none-star.png"}}'></image> 
                 <image src='{{stars>40?"/images/icon/star.png":"/images/icon/none-star.png"}}'></image> 
                 <image src='{{stars>50?"/images/icon/star.png":"/images/icon/none-star.png"}}'></image> 

                <!-- <image src='/images/icon/none-star.png'></image> -->
                    <!--{{ratting.star>10?"/images/icon/star.png":"/images/icon/none-star.png"}}  -->
            <text class='rating'>{{average}}</text>
        </view>     
</template>